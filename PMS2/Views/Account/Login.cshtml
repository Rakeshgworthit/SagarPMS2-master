    <script>
        function openModelpop() {
            $.loader({ content: "<img src='/Content/img/Preloader_3.gif' />" });            
            $(".modal").modal("show");
           // pageName = "";
            $(".modal-content").load("/Account/ForgotPassword");
            $.loader('close');
        }

        function SendPassword() {
            var form = $('#ForgotPassword');
            $.validator.unobtrusive.parse(form);
            if (form.valid()) {
                $.loader({ content: "<img src='/Content/img/Preloader_3.gif' />" });
                $.ajax({
                    type: "POST",
                    url: "/Account/ForgotPassword",
                    data: {
                        UserEmail: $("#UserEmail").val()
                    }, // optional data
                    success: function (result) {
                        $.loader('close');
                        if (result.cls == "error") {
                            notify(result.msg, result.cls);
                        } else {
                            $("#btnClose").click();                            
                            notify(result.msg, result.cls);
                        }
                    },
                    error: function (req, status, error) {
                        $.loader('close');
                    }
                });
            }
        }

        $(document).ready(function () {

            $('#show_password').hover(function show() {
                //Change the attribute to text  
                $('#Password').attr('type', 'text');
                $('.icon').removeClass('glyphicon glyphicon-eye-close').addClass('glyphicon glyphicon-eye-open');
            },
                function () {
                    //Change the attribute back to password  
                    $('#Password').attr('type', 'password');
                    $('.icon').removeClass('glyphicon glyphicon-eye-open').addClass('glyphicon glyphicon-eye-close');
                });
        });

        function notify(msg, type) {
            notif({
                msg: msg,
                type: type,
                position: "center",
                opacity: 0.9,
                timeout: 2000
            });
        }

    </script>
