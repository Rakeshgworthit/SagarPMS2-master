                    @*<div class="panel-heading">
                        <strong> Sign in to continue</strong>
                    </div>*@
                    <div class="panel-body">
                        <h2 class="login_heading">Signin</h2>
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin", role = "form", @style = "margin-top:30px !important;" }))
                        {
                            // @Html.ValidationSummary(true, "", new { @class = "text-error alert alert-danger" })
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <div class="row">
                                    <div class="center-block">
                                        <img class="profile-img"
                                             src="~/Content/img/photo.jpg" alt="">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-user"></i>
                                                </span>
                                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User Name" ,@tabindex ="1" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-error" })
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-addon">
                                                    <button id="show_password"  type="button" style="padding-left:initial; background:none; border:none" tabindex="-1">
                                                        <span><i class="glyphicon glyphicon-eye-open"></i></span>
                                                    </button>
                                                </div>
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", @tabindex = "2" })
                                                
                                            </div>
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-error" })
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-primary btn-block" value="Sign in">
                                        </div>
                                        <div class="form-group text-right">
                                            <input type="button" onclick="openModelpop();" class="btn btn-link" value="Forgot Password?" style="color:white">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        }
                        @foreach (var modelState in ViewData.ModelState.Values)
                        {
                            foreach (var err in modelState.Errors)
                            {
                                <p class="text-danger text-center">@err.ErrorMessage</p>
                            }
                        }
                    </div>                   
