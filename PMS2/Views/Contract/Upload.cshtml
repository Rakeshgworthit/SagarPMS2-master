<div id="example">
    <div>
        <div class="demo-section k-content">
            <input name="files" id="files" type="file" />
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#files").kendoUpload({
                async: {
                    saveUrl: "/Contract/Save?Id="+'@ViewBag.Id',
                    removeUrl: "/Contract/Remove?Id="+'@ViewBag.Id',
                    autoUpload: true,
                    validation: {
                        allowedExtensions: [".jpg", ".png", ".jpeg", ".pdf"]
                    }
                }
            });
        });
    </script>
    </div>