@using MVCGrid.Web
@model PMS.Models.ReportViewModel 
@{
    ViewBag.Title = "ProjectStatusbyBranchReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel box-shadow-none content-header">
    <div class="panel-body">
        <div class="col-md-6">
            <h3 class="animated fadeInLeft text-primary">Project By Address</h3>
        </div>
    </div>
</div>
<div class="col-md-12 padding-0">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading">
                <div class="well">
                    @using (Html.BeginForm("ProjectbyAddress", "Report", FormMethod.Post, new { id = "ProjectStatusbyBranchForm", name = "ProjectStatusbyBranchForm" }))
                    {
                        <div class="form-inline">
                           
                            <div class="form-group">
                                <label class="control-label" for="from_date">Year:</label>
                                @Html.DropDownListFor(o => o.ReportYear, Model.YearList, new { @class = "form-control" })
                            </div>
                            <input type="hidden" id="BranchId" name="BranchId" value="@PMS.Common.SessionManagement.SelectedBranchID" />
                            @*<div class="form-group">
                                <label>Branch:</label>

                                @Html.DropDownListFor(o => o.BranchId, Model.BranchList, new { @class = "form-control", @tabindex = "3" })

                            </div>*@
                            <button type="submit" class="btn btn-primary" onclick="SubmitAs('form');"><i class="fa fa-search" aria-hidden="true"></i></button>

                            <button type="submit" class="btn btn-success pull-right" onclick="SubmitAs('export');"><i class="fa fa-file-excel-o" aria-hidden="true"></i> Export</button>

                        </div>
                    }

                </div>
            </div>
            <div class="panel-body">
                <div class="responsive-table">
                    @Html.Raw(Model.GridData)
                    @*@Html.MVCGrid("ProjectStatusbyBranchReport", new {  ReportYear = Model.ReportYear, Uid = Model.Uid, BranchId=Model.BranchId })*@
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function SubmitAs(obj) {
        if (obj == 'form') {
            $("#ProjectStatusbyBranchForm").attr('action', "ProjectbyAddress").submit();
        } else {
            $('#ProjectStatusbyBranchForm').attr('action', "ExportProjectStatusbyBranchReport").submit();
        }
    }
    $(document).ready(function () {
        $(".table").addClass("table-bordered");
    });
</script>

