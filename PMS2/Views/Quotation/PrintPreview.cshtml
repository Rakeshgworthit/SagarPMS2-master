                    </td>
                    <td style="width:50%;text-align:right;"><strong style="text-align:right;">$ 440.00</strong></td>
                </tr>
            </tbody>
        </table>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <p>
            <span style="font-size:20px;">
                <strong>
                    <span style="text-decoration:underline;">
                        Payment
                        terms :
                    </span>
                </strong>
            </span>
        </p>
        <div style="margin-left: 30px;">
            <ol type="i">
                @foreach (var item in Model.paymentterms)
                {
                    <li>
                        @item.paymentdescription.Master_payment_description
                    </li>
                }
            </ol>
        </div>
        <br />
        <br />
        <p><strong style="font-size:20px;"><span style="text-decoration:underline;">Contract terms :</span></strong></p>
        <br />
        <div style="margin-left: 30px;">
            @foreach (var item in Model.ContractTerms)
            {
                <p>@Html.Raw(item.contract_desrcription)</p>
            }
        </div>
        @*<input type="button" value="Print" onclick="PrintElem()" />*@
        @*<button type="button" id="print_preview" onclick="PrintElem();" class='btn btn-primary ml-2 mb-2'>
            <i class="fa fa-print"></i><span style="padding-left:10px;">Print Quotation</span>
        </button>*@

    </div>
</body>
</html>
<button type="button" id="print_preview" onclick="PrintElem();" class='btn btn-success ml-2 mb-2 float_print_preview_btn' >
