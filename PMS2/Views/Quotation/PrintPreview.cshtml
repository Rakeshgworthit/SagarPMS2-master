                            <td style="width:10.3641%;text-align:right;">0</td>
                        </tr>
                        <tr style="height:24.4186%;">
                            <td style="width:6.16246%;">1.2</td>
                            <td style="width:67.8805%;">Supply labour to dismantle existing wash basin for 2 bathrooms</td>
                            <td style="width:7.93651%;">4</td>
                            <td style="width:7.6564%;">100</td>
                            <td style="width:10.3641%;text-align:right;">400</td>
                        </tr>
                        <tr style="height:25.5814%;">
                            <td style="width:6.16246%;">1.3</td>
                            <td style="width:67.8805%;">Supply labour to dismantle existing wash basin for 2 bathrooms</td>
                            <td style="width:7.93651%;">0</td>
                            <td style="width:7.6564%;">inclusive</td>
                            <td style="width:10.3641%;text-align:right;">0</td>
                        </tr>
                        <tr style="height:24.4186%;">
                            <td style="width:6.16246%;">1.4</td>
                            <td style="width:67.8805%;">Supply labour to dismantle existing wash basin for 2 bathrooms</td>
                            <td style="width:7.93651%;">0</td>
                            <td style="width:7.6564%;">inclusive</td>
                            <td style="width:10.3641%;text-align:right;">0</td>
                        </tr>
                    </tbody>
                    @*<tbody>
                            @foreach (var item1 in Model.tasklist)
                            {
                                if (item1.Contains(item))
                                {
                                    <tr style="height:25.5814%;">
                                        <td style="width:6.16246%;">1.1</td>
                                        <td style="width:727px;">item1.item.item_description</td>
                                        <td style="width:7.93651%;">0</td>
                                        <td style="width:7.6564%;">inclusive</td>
                                        <td style="width:10.3641%;text-align:right;">0</td>
                                    </tr>
                                }
                            }
                        </tbody>*@
                </table>
                <br />
            }
            <table class="total_table" style="width:131px;float:right;margin-right: 66px;">
                <tbody>
                    <tr style="height:100%;">
                        <td style="width:100%;text-align:right;">Sub total: $ 400</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <br />
        <br />

        <p>&nbsp;</p>
        <table class="total_table" style="width:338px;float:right;margin-right: 66px;">
            <tbody>
                <tr style="height:20%;">
