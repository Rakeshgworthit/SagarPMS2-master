                        <td style="width:31.1858%;">@item.customer</td>
                        <td style="width:17.1802%;">&nbsp;</td>
                        <td style="width:14.9393%;">&nbsp;</td>
                        <td style="width:15.4062%;text-align:right;"><strong>Quotation Number :</strong></td>
                        <td style="width:13.5387%;">8989-TH-8989</td>
                    </tr>
                    <tr style="height:33.333333333333336%;">
                        <td style="width:7.6564%;text-align:left;"><strong>Jobsite :</strong></td>
                        <td style="width:31.1858%;text-align:left;">@item.Jobsite</td>
                        <td style="width:17.1802%;text-align:left;"><strong>NRIC: @item.NRIC</strong></td>
                        <td style="width:14.9393%;"></td>
                        <td style="width:15.4062%;text-align:right;"><strong>Date :</strong></td>
                        <td style="width:13.5387%;">@item.quotationForwardDate</td>
                    </tr>
                    <tr style="height:33.333333333333336%;">
                        <td style="width:7.6564%;"><strong>Email :</strong></td>
                        <td style="width:31.1858%;">@item.Email</td>
                        <td style="width:17.1802%;">&nbsp;</td>
                        <td style="width:14.9393%;">&nbsp;</td>
                        <td style="width:15.4062%;text-align:right;"><strong>H/P :</strong></td>
