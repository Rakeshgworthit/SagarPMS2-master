@model dynamic

@{
    ViewBag.Title = "PrintPreview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .header_table tr.table_head {
        background: #9696969c;
        text-align: center;
        border: 1px solid black;
        color: black;
    }

    .header_table tr,
    .header_table td, .quotation_description_table td, .quotation_description_table tr, .total_table td, .total_table tr {
        border: 1px solid black;
    }
    .float_print_preview_btn {
        right: 0px;
        left: auto;
        position: fixed;
        text-align: center;
        box-shadow: 2px 2px 3px #999;
        top: 150px;
        border-top-left-radius: 20px !important;
        border-bottom-left-radius: 20px !important;
        width: 80px;
        background-color: #2e9a48 !important;
    }
</style>

<html xmlns="http://www.w3.org/1999/xhtml">

<body>
