        </table>
        <p>&nbsp;</p>
        <p style="text-align:center;"><strong><span style="font-size:medium;text-decoration:underline;color:black;">Renovation Quotation</span></strong></p>
        <br />

        <br />
        <table class="header_table" style="width:1073px;">
            <tbody>
                <tr class="table_head" style="height:100%;">
                    <td style="width:6.62932%;"><strong>Item</strong></td>
                    <td class="table_head" style="width:67.1335%;"><strong>Description</strong></td>
                    <td class="table_head" style="width:8.02988%;"><strong>Quantity</strong></td>
                    <td class="table_head" style="width:7.6564%;"><strong>Amount</strong></td>
                    <td class="table_head" style="width:10.4575%;"><strong>Sub Total($)</strong></td>
                </tr>
            </tbody>
        </table>
        <p></p>
        <div>
            @foreach (var item in Model.tasknamelist)
            {
