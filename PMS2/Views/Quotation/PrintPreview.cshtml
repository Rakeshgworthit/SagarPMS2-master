                        <i class="fa fa-print"></i><span style="padding-left:10px;">Print Quotation</span>
                    </button>

                </div>
            </div>
        </div>
    </div>
    <div id="PrintQuotation" class="container">
        <br />
        <br />
        <img src="~/Content/img/print_logo_new.png" width="30%" />
        <br />
        <br />
        <table style="width:1073px;">
            <tbody>
                @foreach (var item in Model.projlist)
