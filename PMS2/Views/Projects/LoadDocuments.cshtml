@model PMS.Models.ProjectDocumentViewModel
@{
    Layout = null;
}
<div class="modal-header">
    <h4 class="modal-title">View Documents</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>

</div>



<div class="modal-body">
    <div class="row">

        <div class="col-md-12">
            @*<table class="table table-responsive table-striped table-bordered">*@
            <table class="table">
                <thead>
                    <tr>

                        <th>File Name</th>
                        <th>Description</th>
                        <th>Uploaded By</th>
                        <th>Uploaded Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.project_document_list.Count == 0)
                    {
                        <tr>
                            <td colspan="4"><p class="alert alert-info" role="alert">Record Not Found.</p></td>
                        </tr>
                    }
                    else
                    {
                        foreach (var pdlist in Model.project_document_list)
                        {
                            //if (!String.IsNullOrEmpty(pdlist.Uploaded_By_Name))
                            //{
                            <tr>
                                <td>@pdlist.file_name</td>
                                <td>@pdlist.file_desc</td>
                                <td>@pdlist.UploadedName</td>
                                <td>@pdlist.uploaded_on.ToString("MM/dd/yyyy")</td>

                                @*<td><a target="_blank" title="View document" href="/Content/ContractDucuments/@pdlist.file_name">View</a></td>*@
                                <td><a target="_blank" title="View document" href="@pdlist.document_path/@pdlist.file_name">View</a></td>
                            </tr>
                            //}
                        }

                    }



                </tbody>
            </table>

        </div>


    </div>
</div>





